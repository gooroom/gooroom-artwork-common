alt_r=""
control_r=""

get_keytype() {
    # Alt_R (0x6c)
    xmodmap | grep -q "Alt_R (0x6c)"
    [ "$?" -eq 0 ] && alt_r="0x6c" || alt_r="xxxx"

    # Control_R (0x69)
    xmodmap | grep -q "Control_R (0x69)"
    [ "$?" -eq 0 ] && control_r="0x69" || control_r="xxxx"
}

get_keytype

if [[ "$alt_r" = "0x6c" ]]; then
    xmodmap -e 'keycode 0x6c = Hangul'
fi

if [[ "$control_r" = "0x69" ]]; then
    xmodmap -e 'keycode 0x69 = Hangul_Hanja'
fi
